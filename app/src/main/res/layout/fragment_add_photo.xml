<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.writeForm.AddPhotoFragment">

        <TextView
            android:id="@+id/addPhoto_attach_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="사진첨부"
            android:textColor="@color/colorText"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/addPhoto_attach_view"
            android:layout_width="205dp"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/all_back_filled_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addPhoto_attach_tv" />

        <ImageView
            android:id="@+id/addPhoto_attach_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_attach_photo"
            app:layout_constraintBottom_toBottomOf="@+id/addPhoto_attach_view"
            app:layout_constraintEnd_toEndOf="@+id/addPhoto_attach_view"
            app:layout_constraintStart_toStartOf="@+id/addPhoto_attach_view"
            app:layout_constraintTop_toTopOf="@+id/addPhoto_attach_view" />


        <TextView
            android:id="@+id/addPhoto_describe_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:text="부가설명"
            android:textColor="@color/colorText"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addPhoto_attach_view" />

        <EditText
            android:id="@+id/addPhoto_describe_et"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/all_back_filled_green"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addPhoto_describe_tv" />

        <Button
            android:id="@+id/addPhoto_submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/all_back_top_greenline"
            android:text="완료"
            android:textColor="@color/colorTextGreen"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>