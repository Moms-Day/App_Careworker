<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="340dp"
    app:cardCornerRadius="10dp"
    android:layout_height="46dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_writeFormPatient_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_patient"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/item_writeFormPatient_greenBar"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorSemiGreen"
            app:layout_constraintBottom_toBottomOf="@+id/item_writeFormPatient_icon"
            app:layout_constraintStart_toEndOf="@+id/item_writeFormPatient_icon"
            app:layout_constraintTop_toTopOf="@+id/item_writeFormPatient_icon" />

        <TextView
            android:id="@+id/item_writeFormPatient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#2c2c2c"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_writeFormPatient_greenBar"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="공통" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>