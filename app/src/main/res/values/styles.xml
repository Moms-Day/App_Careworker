<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#95C1FF</item>
        <item name="colorPrimaryDark">#66A6FF</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BaseEditTextStyle" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:padding">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/colorSkyBlue</item>
        <item name="textColor">@color/colorGray</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:inputType">text|textNoSuggestions</item>
    </style>
</resources>
